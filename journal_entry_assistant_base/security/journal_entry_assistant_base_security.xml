<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <record id="assistant_journal_entry_base_multi_company_rule" model="ir.rule">
            <field name="name">Regla multi-compañía para Asistentes de Diario</field>
            <field name="model_id" ref="model_assistant_journal_entry_base"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>

        <record id="assistant_journal_entry_base_user_rule" model="ir.rule">
            <field name="name">Asistente Diario: Ver Propios y Borradores</field>
            <field name="model_id" ref="model_assistant_journal_entry_base"/>
            <field name="groups" eval="[(4, ref('group_journal_assistant_user'))]"/>
            <field name="domain_force">['|', ('user_id', '=', False), ('user_id', '=', user.id)]</field>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="1"/>
        </record>

        <record id="assistant_journal_entry_base_approver_rule" model="ir.rule">
            <field name="name">Asistente Diario: Ver Todo (Aprobador)</field>
            <field name="model_id" ref="model_assistant_journal_entry_base"/>
            <field name="groups" eval="[(4, ref('group_journal_assistant_approver'))]"/>
            <field name="domain_force">[(1, '=', 1)]</field>
        </record>

        <record id="rule_res_users_read_own_explicit" model="ir.rule">
            <field name="name">Seguridad Base: Usuario puede leerse a sí mismo (Anti-Bloqueo)</field>
            <field name="model_id" ref="base.model_res_users"/>
            <field name="domain_force">[('id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/> <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="0"/> <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
        </record>
    </data>
</odoo>