<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <record id="module_category_journal_assistant" model="ir.module.category">
            <field name="name">Asistente de Asientos</field>
            <field name="description">Niveles de acceso para los asistentes de diario.</field>
            <field name="sequence">10</field>
        </record>

        <record id="group_journal_assistant_user" model="res.groups">
            <field name="name">Usuario Asistente</field>
            <field name="category_id" ref="module_category_journal_assistant"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_journal_assistant_approver" model="res.groups">
            <field name="name">Aprobador de Asistentes de Diario</field>
            <field name="category_id" ref="module_category_journal_assistant"/>
            <field name="implied_ids" eval="[(4, ref('group_journal_assistant_user')), (4, ref('account.group_account_user'))]"/>
            <field name="comment">
                Los usuarios con este rol pueden aprobar, rechazar y registrar los asientos.
            </field>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

    </data>
</odoo>