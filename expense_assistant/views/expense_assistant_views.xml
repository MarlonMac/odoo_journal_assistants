<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_expense_assistant_form" model="ir.ui.view">
        <field name="name">expense.assistant.form</field>
        <field name="model">expense.assistant</field>
        <field name="arch" type="xml">
            <form string="Asistente de Gasto">
                <header>
                    <button name="action_submit_for_approval" string="Enviar para Aprobación" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="action_approve" string="Aprobar" type="object" class="oe_highlight" 
                            attrs="{'invisible': [('state', '!=', 'to_approve')]}" 
                            groups="journal_entry_assistant_base.group_journal_assistant_approver"/>
                    <button name="action_reject" string="Rechazar" type="object" 
                            attrs="{'invisible': [('state', '!=', 'to_approve')]}" 
                            groups="journal_entry_assistant_base.group_journal_assistant_approver"/>
                    <button name="action_post" string="Registrar Contablemente" type="object" class="oe_highlight" 
                            attrs="{'invisible': [('state', '!=', 'approved')]}" 
                            groups="journal_entry_assistant_base.group_journal_assistant_approver"/>
                    <button name="action_register_payment" string="Registrar Pago" type="object" class="oe_highlight"
                            attrs="{'invisible': ['|', ('payment_status', 'in', ['paid', 'not_payable']), ('state', '!=', 'posted')]}"
                            groups="account.group_account_invoice"/>
                    <button name="action_cancel" string="Cancelar/Revertir" type="object" confirm="¿Estás seguro? Se creará un asiento de reversión." attrs="{'invisible': [('state', '!=', 'posted')]}"/>
                    <button name="action_to_draft" string="Volver a Borrador" type="object" attrs="{'invisible': [('state', '!=', 'cancelled')]}"/>
                    
                    <field name="state" widget="statusbar" statusbar_visible="draft,to_approve,approved,posted"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Pagado" bg_color="bg-success"
                            attrs="{'invisible': [('payment_status', '!=', 'paid')]}"/>
                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="description"/>
                            <field name="partner_id" string="Proveedor/Contacto Original"/>
                            <field name="amount"/>
                            <field name="responsible_employee_ids" widget="many2many_tags"/>
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="payment_method"/>
                            <field name="category_id"/>
                            <field name="company_id" invisible="1"/>
                            <field name="expense_account_id"/>
                            <field name="move_id" attrs="{'invisible': [('move_id', '=', False)]}"/>
                            <field name="amount_due" invisible="1"/>
                            <field name="payment_status" invisible="1"/>
                        </group>
                    </group>
                    
                    <group string="Documento de Soporte">
                        <group>
                            <field name="document_type" widget="radio" options="{'horizontal': true}"/>
                        </group>
                        <group>
                            <field name="dte_series" attrs="{'invisible': [('document_type', '!=', 'invoice')], 'required': [('document_type', '=', 'invoice')]}"/>
                            <field name="dte_number" attrs="{'invisible': [('document_type', '!=', 'invoice')], 'required': [('document_type', '=', 'invoice')]}"/>
                            <field name="dte_authorization" attrs="{'invisible': [('document_type', '!=', 'invoice')], 'required': [('document_type', '=', 'invoice')]}"/>
                            
                            <field name="document_number" attrs="{'invisible': [('document_type', '!=', 'receipt')], 'required': [('document_type', '=', 'receipt')]}"/>
                            
                            <div class="text-muted" attrs="{'invisible': [('document_type', '!=', 'forecast')]}" colspan="2">
                                <i class="fa fa-info-circle"/> Este gasto está en estado previsto. Debe seleccionar Factura o Recibo e ingresar los datos antes de enviar a aprobación.
                            </div>
                        </group>
                    </group>

                    <group>
                        <group><field name="is_reimbursement"/></group>
                    </group>
                    
                    <group attrs="{'invisible': [('is_reimbursement', '=', False)]}">
                        <separator string="Detalles de la Cuenta por Pagar"/>
                        <group>
                             <field name="due_date"/>
                             <field name="reimburse_partner_id"/>
                             <field name="payable_account_id"/>
                        </group>
                    </group>
                    
                    <group attrs="{'invisible': [('is_reimbursement', '=', True)]}">
                        <group>
                            <field name="payment_journal_id" attrs="{'required': [('is_reimbursement', '=', False)]}"/>
                            <field name="attachment" widget="binary" filename="attachment_filename" attrs="{'required': [('is_reimbursement', '=', False)]}"/>
                            <field name="attachment_filename" invisible="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Cuentas Bancarias del Contacto" name="bank_accounts" attrs="{'invisible': [('partner_id', '=', False)]}">
                            <field name="partner_bank_ids" readonly="1">
                                <tree>
                                    <field name="bank_id"/>
                                    <field name="acc_number"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Pagos" name="payments" attrs="{'invisible': [('is_reimbursement', '=', False)]}">
                            <field name="payment_ids" readonly="1">
                                <tree>
                                    <field name="date"/>
                                    <field name="journal_id"/>
                                    <field name="amount"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    
    <record id="view_expense_assistant_tree" model="ir.ui.view">
        <field name="name">expense.assistant.tree</field>
        <field name="model">expense.assistant</field>
        <field name="arch" type="xml">
            <tree string="Gastos Corporativos">
                <field name="name"/>
                <field name="date"/>
                <field name="document_type"/>
                <field name="description"/>
                <field name="category_id"/>
                <field name="partner_id"/>
                <field name="amount" sum="Total"/>
                <field name="payment_status" string="Estado de Pago" widget="badge"
                       decoration-success="payment_status == 'paid'"
                       decoration-warning="payment_status == 'partial'"
                       decoration-danger="payment_status == 'unpaid'"/>
                <field name="state" widget="badge" decoration-success="state == 'posted'" decoration-info="state in ['draft', 'to_approve', 'approved']" decoration-muted="state == 'cancelled'"/>
            </tree>
        </field>
    </record>

    <record id="view_expense_assistant_search" model="ir.ui.view">
        <field name="name">expense.assistant.search</field>
        <field name="model">expense.assistant</field>
        <field name="arch" type="xml">
            <search string="Búsqueda de Gastos">
                <field name="name" string="Referencia"/>
                <field name="description" string="Descripción"/>
                <field name="partner_id" string="Proveedor/Contacto"/>
                <field name="dte_number" string="Número DTE"/>
                <field name="dte_series" string="Serie DTE"/>
                <field name="dte_authorization" string="Autorización DTE"/>
                <field name="document_number" string="Número de Documento"/>

                <separator/>

                <filter string="Mis Gastos" name="my_expenses" domain="[('create_uid', '=', uid)]"/>
                <filter string="Borrador" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Para Aprobar" name="to_approve" domain="[('state', '=', 'to_approve')]"/>
                <separator/>
                <filter string="Facturas" name="invoices" domain="[('document_type', '=', 'invoice')]"/>
                <filter string="Recibos" name="receipts" domain="[('document_type', '=', 'receipt')]"/>

                <group expand="0" string="Agrupar Por">
                    <filter string="Categoría" name="group_category" domain="[]" context="{'group_by': 'category_id'}"/>
                    <filter string="Proveedor/Contacto" name="group_partner" domain="[]" context="{'group_by': 'partner_id'}"/>
                    <filter string="Empleado Responsable" name="group_employee" domain="[]" context="{'group_by': 'responsible_employee_ids'}"/>
                    <filter string="Método de Pago Original" name="group_payment_method" domain="[]" context="{'group_by': 'payment_method'}"/>
                    <filter string="Diario de Pago" name="group_payment_journal" domain="[]" context="{'group_by': 'payment_journal_id'}"/>
                    <separator/>
                    <filter string="Estado" name="group_state" domain="[]" context="{'group_by': 'state'}"/>
                    <filter string="Mes" name="group_date" domain="[]" context="{'group_by': 'date:month'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <record id="action_expense_assistant" model="ir.actions.act_window">
        <field name="name">Asistente de Gastos</field>
        <field name="res_model">expense.assistant</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('company_id', '=', allowed_company_ids[0])]</field>
        <field name="search_view_id" ref="view_expense_assistant_search"/>
        <field name="help" type="html"><p class="o_view_nocontent_smiling_face">Crea un nuevo registro de gasto.</p></field>
    </record>

    <menuitem id="menu_expense_assistant_root" name="Asistentes de Diario" sequence="15"/>
    <menuitem id="menu_expense_assistant" name="Gastos Corporativos" parent="menu_expense_assistant_root" action="action_expense_assistant" sequence="10"/>
    <menuitem id="menu_expense_assistant_config" name="Configuración" parent="menu_expense_assistant_root" sequence="100"/>
    <menuitem id="menu_expense_category" name="Categorías de Gastos" parent="menu_expense_assistant_config" action="expense_assistant.action_expense_category" sequence="10"/>
</odoo>