<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_expense_assistant_tree" model="ir.ui.view">
        <field name="name">expense.assistant.tree</field>
        <field name="model">expense.assistant</field>
        <field name="arch" type="xml">
            <tree string="Gastos Corporativos">
                <field name="name"/>
                <field name="date"/>
                <field name="description"/>
                <field name="category_id"/>
                <field name="partner_id"/>
                <field name="amount" sum="Total"/>
                <field name="state" widget="badge" decoration-success="state == 'posted'" decoration-info="state == 'draft'" decoration-danger="state == 'cancelled'"/>
            </tree>
        </field>
    </record>

    <record id="view_expense_assistant_form" model="ir.ui.view">
        <field name="name">expense.assistant.form</field>
        <field name="model">expense.assistant</field>
        <field name="arch" type="xml">
            <form string="Asistente de Gasto">
                <header>
                    <button name="action_post" string="Registrar" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="action_cancel" string="Cancelar/Revertir" type="object" confirm="¿Estás seguro? Se creará un asiento de reversión." attrs="{'invisible': [('state', '!=', 'posted')]}"/>
                    <button name="action_to_draft" string="Volver a Borrador" type="object" attrs="{'invisible': [('state', '!=', 'cancelled')]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,posted"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="description"/>
                            <field name="partner_id" string="Proveedor/Contacto Original"/>
                            <field name="amount"/>
                            <field name="responsible_employee_ids" widget="many2many_tags"/>
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="due_date"/>
                            <field name="payment_method"/>
                            <field name="category_id"/>
                            <field name="expense_account_id"/>
                            <field name="analytic_account_id"/>
                            <field name="move_id" attrs="{'invisible': [('move_id', '=', False)]}"/>
                        </group>
                    </group>
                    <group>
                        <group><field name="is_reimbursement"/></group>
                    </group>
                    <group attrs="{'invisible': [('is_reimbursement', '=', False)]}">
                        <separator string="Detalles de la Cuenta por Pagar"/>
                        <group>
                             <field name="reimburse_partner_id"/>
                             <field name="payable_account_id"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="payment_journal_id" attrs="{'invisible': [('is_reimbursement', '=', True)], 'required': [('is_reimbursement', '=', False)]}"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    
    <record id="action_expense_assistant" model="ir.actions.act_window">
        <field name="name">Asistente de Gastos</field>
        <field name="res_model">expense.assistant</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html"><p class="o_view_nocontent_smiling_face">Crea un nuevo registro de gasto.</p></field>
    </record>

    <menuitem id="menu_expense_assistant_root" name="Asistentes de Diario" sequence="15"/>
    <menuitem id="menu_expense_assistant" name="Gastos Corporativos" parent="menu_expense_assistant_root" action="action_expense_assistant" sequence="10"/>
    <menuitem id="menu_expense_assistant_config" name="Configuración" parent="menu_expense_assistant_root" sequence="100"/>
    <menuitem id="menu_expense_category" name="Categorías de Gastos" parent="menu_expense_assistant_config" action="action_expense_category" sequence="10"/>
</odoo>