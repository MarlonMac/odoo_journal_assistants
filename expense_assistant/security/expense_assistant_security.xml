<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <record id="expense_assistant_multi_company_rule" model="ir.rule">
            <field name="name">Gasto: Multi-Compañía</field>
            <field name="model_id" ref="model_expense_assistant"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>

        <record id="expense_assistant_user_own_rule" model="ir.rule">
            <field name="name">Gasto: Ver Mis Gastos</field>
            <field name="model_id" ref="model_expense_assistant"/>
            <field name="groups" eval="[(4, ref('journal_entry_assistant_base.group_journal_assistant_user'))]"/>
            <field name="domain_force">['|', ('user_id', '=', False), ('user_id', '=', user.id)]</field>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="1"/>
        </record>

        <record id="expense_assistant_manager_all_rule" model="ir.rule">
            <field name="name">Gasto: Ver Todo (Manager)</field>
            <field name="model_id" ref="model_expense_assistant"/>
            <field name="groups" eval="[(4, ref('journal_entry_assistant_base.group_journal_assistant_approver'))]"/>
            <field name="domain_force">[(1, '=', 1)]</field>
        </record>


        <record id="expense_category_multi_company_rule" model="ir.rule">
            <field name="name">Regla multi-compañía para Categorías de Gasto</field>
            <field name="model_id" ref="model_expense_category"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>

    </data>
</odoo>