<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_loan_payment_assistant_tree" model="ir.ui.view">
        <field name="name">loan.payment.assistant.tree</field>
        <field name="model">loan.payment.assistant</field>
        <field name="arch" type="xml">
            <tree string="Pagos de Préstamos">
                <field name="name"/>
                <field name="date"/>
                <field name="description"/>
                <field name="loan_id"/>
                <field name="principal_amount"/>
                <field name="interest_amount"/>
                <field name="amount" sum="Total Pagado"/>
                <field name="state" widget="badge" decoration-success="state == 'posted'" decoration-info="state in ['draft', 'to_approve', 'approved']" decoration-muted="state == 'cancelled'"/>/>
            </tree>
        </field>
    </record>

    <record id="view_loan_payment_assistant_form" model="ir.ui.view">
        <field name="name">loan.payment.assistant.form</field>
        <field name="model">loan.payment.assistant</field>
        <field name="arch" type="xml">
            <form string="Asistente de Pago de Préstamo">
                <header>
                    <button name="action_submit_for_approval" string="Enviar para Aprobación" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="action_approve" string="Aprobar" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'to_approve')]}" groups="journal_entry_assistant_base.group_journal_assistant_approver"/>
                    <button name="action_reject" string="Rechazar" type="object" attrs="{'invisible': [('state', '!=', 'to_approve')]}" groups="journal_entry_assistant_base.group_journal_assistant_approver"/>
                    <button name="action_post" string="Registrar Contablemente" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'approved')]}" groups="journal_entry_assistant_base.group_journal_assistant_approver"/>
                    <button name="action_cancel" string="Cancelar/Revertir" type="object" attrs="{'invisible': [('state', '!=', 'posted')]}"/>
                    <button name="action_to_draft" string="Volver a Borrador" type="object" attrs="{'invisible': [('state', '!=', 'cancelled')]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,to_approve,approved,posted"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="loan_id" options="{'no_create': True, 'no_open': True}"/>
                            <field name="description"/>
                            <field name="principal_amount"/>
                            <field name="interest_amount"/>
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="payment_journal_id"/>
                            <field name="amount"/>
                            <field name="move_id" attrs="{'invisible': [('move_id', '=', False)]}"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    
    <record id="action_loan_payment_assistant" model="ir.actions.act_window">
        <field name="name">Asistente de Pago de Préstamos</field>
        <field name="res_model">loan.payment.assistant</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html"><p class="o_view_nocontent_smiling_face">Crea un nuevo registro de pago de préstamo.</p></field>
    </record>

    <menuitem id="menu_loan_payment_assistant"
              name="Pago de Préstamos"
              parent="expense_assistant.menu_expense_assistant_root"
              action="action_loan_payment_assistant"
              sequence="30"/>
</odoo>