<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_loan_loan_tree" model="ir.ui.view">
        <field name="name">loan.loan.tree</field>
        <field name="model">loan.loan</field>
        <field name="arch" type="xml">
            <tree string="Préstamos">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="date_start"/>
                <field name="maturity_date" widget="remaining_days"/>
                <field name="original_amount"/>
                <field name="outstanding_balance"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-success="state == 'active'" decoration-muted="state == 'paid'"/>
            </tree>
        </field>
    </record>

    <record id="view_loan_loan_kanban" model="ir.ui.view">
        <field name="name">loan.loan.kanban</field>
        <field name="model">loan.loan</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" 
                    default_group_by="state" 
                    sample="1"
                    records_draggable="0"
                    quick_create="0"
                    group_create="0">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="outstanding_balance"/>
                <field name="original_amount"/>
                <field name="maturity_date"/>
                <field name="state"/>
                <field name="progress"/>
                <field name="currency_id"/>
                <field name="id"/>
                
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click shadow-sm rounded mb-2">
                            <div class="o_kanban_record_top mb-2">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title text-primary"><field name="name"/></strong>
                                    <br/>
                                    <span class="text-muted"><i class="fa fa-user mr-1"/> <field name="partner_id"/></span>
                                </div>
                                <div class="o_dropdown_kanban dropdown">
                                    <a class="dropdown-toggle btn" data-toggle="dropdown" href="#">
                                        <span class="fa fa-ellipsis-v" aria-hidden="true"/>
                                    </a>
                                    <div class="dropdown-menu" role="menu">
                                        <a type="edit" class="dropdown-item">Editar</a>
                                        <a type="delete" class="dropdown-item">Eliminar</a>
                                    </div>
                                </div>
                            </div>

                            <div class="o_kanban_record_body">
                                <div class="row mb-2">
                                    <div class="col-7">
                                        <span class="text-muted small text-uppercase">Saldo Pendiente</span><br/>
                                        <strong style="font-size: 1.1em; color: #d9534f;">
                                            <field name="outstanding_balance" widget="monetary"/>
                                        </strong>
                                    </div>
                                    <div class="col-5 text-right">
                                        <field name="state" widget="label_selection" options="{'classes': {'draft': 'default', 'active': 'success', 'paid': 'muted'}}"/>
                                    </div>
                                </div>

                                <div attrs="{'invisible': [('state', '=', 'draft')]}" class="mt-2">
                                    <div class="d-flex justify-content-between align-items-center mb-1">
                                        <span class="text-muted small">Progreso de Pago</span>
                                        <span class="small font-weight-bold text-info"><t t-esc="Math.round(record.progress.raw_value)"/>%</span>
                                    </div>
                                    <div class="progress" style="height: 6px; background-color: #e9ecef; border-radius: 3px;">
                                        <div class="progress-bar bg-info" role="progressbar" 
                                             t-att-style="'width: ' + record.progress.raw_value + '%'" 
                                             t-att-aria-valuenow="record.progress.raw_value" aria-valuemin="0" aria-valuemax="100">
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="o_kanban_record_bottom mt-3 pt-2 border-top">
                                <div class="oe_kanban_bottom_left">
                                    <t t-if="record.maturity_date.raw_value and record.state.raw_value != 'paid'">
                                        <span class="text-muted small"><i class="fa fa-clock-o mr-1"/>Vence: </span>
                                        <field name="maturity_date" widget="remaining_days"/>
                                    </t>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <field name="activity_ids" widget="kanban_activity"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_loan_loan_form" model="ir.ui.view">
        <field name="name">loan.loan.form</field>
        <field name="model">loan.loan</field>
        <field name="arch" type="xml">
            <form string="Préstamo">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,active,paid"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Pagado" bg_color="bg-success" attrs="{'invisible': [('state', '!=', 'paid')]}"/>

                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_payments"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-money">
                            <field name="payment_count" widget="statinfo" string="Pagos"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" placeholder="Ej: Préstamo Bancario #12345"/></h1>
                    </div>
                    <group>
                        <group string="Estado Financiero">
                            <field name="partner_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="original_amount" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="outstanding_balance" force_save="1" readonly="1" style="font-weight: bold; font-size: 1.2em; color: #d9534f;" />
                        </group>
                        <group string="Condiciones">
                            <field name="date_start" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="payment_term_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="maturity_date" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </group>
                        <group string="Configuración Contable">
                            <field name="company_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="principal_account_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="interest_account_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Historial de Pagos" name="payments">
                            <field name="payment_assistant_ids" readonly="1">
                                <tree decoration-muted="state == 'cancelled'">
                                    <field name="date"/>
                                    <field name="name"/>
                                    <field name="principal_amount" sum="Total Capital"/>
                                    <field name="interest_amount" sum="Total Intereses"/>
                                    <field name="amount" sum="Total Pagado"/>
                                    <field name="state" widget="badge" decoration-success="state == 'posted'"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    
    <record id="action_loan_loan" model="ir.actions.act_window">
        <field name="name">Contratos de Préstamo</field>
        <field name="res_model">loan.loan</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>

    <menuitem id="menu_loan_category"
              name="Gestión de Préstamos"
              parent="expense_assistant.menu_expense_assistant_root"
              sequence="30"/>

    <menuitem id="menu_loan_loan"
              name="Préstamos (Dashboard)"
              parent="menu_loan_category"
              action="action_loan_loan"
              sequence="1"/>
</odoo>