<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_loan_loan_tree" model="ir.ui.view">
        <field name="name">loan.loan.tree</field>
        <field name="model">loan.loan</field>
        <field name="arch" type="xml">
            <tree string="Préstamos">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="original_amount"/>
                <field name="outstanding_balance"/>
                <field name="principal_account_id"/>
                <field name="interest_account_id"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>

    <record id="view_loan_loan_form" model="ir.ui.view">
        <field name="name">loan.loan.form</field>
        <field name="model">loan.loan</field>
        <field name="arch" type="xml">
            <form string="Préstamo">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_payments"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-money">
                            <field name="payment_count" widget="statinfo" string="Pagos"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" placeholder="Ej: Préstamo Bancario #12345"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="original_amount"/>
                            <field name="outstanding_balance"/>
                        </group>
                        <group>
                            <field name="company_id"/>
                            <field name="principal_account_id"/>
                            <field name="interest_account_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="action_loan_loan" model="ir.actions.act_window">
        <field name="name">Contratos de Préstamo</field>
        <field name="res_model">loan.loan</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_loan_category"
              name="Gestión de Préstamos"
              parent="expense_assistant.menu_expense_assistant_root"
              sequence="30"/> 
              <menuitem id="menu_loan_loan"
              name="Contratos (Hub)"
              parent="menu_loan_category"
              action="action_loan_loan"
              sequence="1"/>
</odoo>