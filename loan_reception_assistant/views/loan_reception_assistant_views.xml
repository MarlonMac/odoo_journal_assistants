<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_loan_reception_assistant_form" model="ir.ui.view">
        <field name="name">loan.reception.assistant.form</field>
        <field name="model">loan.reception.assistant</field>
        <field name="arch" type="xml">
            <form string="Asistente de Recepción de Préstamos">
                 <header>
                    <button name="action_submit_for_approval" string="Enviar para Aprobación" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="action_approve" string="Aprobar" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'to_approve')]}" groups="journal_entry_assistant_base.group_journal_assistant_approver"/>
                    <button name="action_reject" string="Rechazar" type="object" attrs="{'invisible': [('state', '!=', 'to_approve')]}" groups="journal_entry_assistant_base.group_journal_assistant_approver"/>
                    <button name="action_post" string="Registrar Contablemente" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'approved')]}" groups="journal_entry_assistant_base.group_journal_assistant_approver"/>
                    <button name="action_cancel" string="Cancelar/Revertir" type="object" confirm="¿Estás seguro? Se creará un asiento de reversión." attrs="{'invisible': [('state', '!=', 'posted')]}"/>
                    <button name="action_to_draft" string="Volver a Borrador" type="object" attrs="{'invisible': [('state', '!=', 'cancelled')]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,to_approve,approved,posted"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    <group>
                        <group string="Detalles del Préstamo">
                            <field name="loan_id" options="{'no_create': True}"/>
                            <field name="partner_id"/>
                            <field name="currency_id" force_save="1" options="{'no_open': True, 'no_create': True}"/>
                            <field name="amount" force_save="1" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            <field name="company_id" invisible="1"/>
                        </group>
                        <group string="Condiciones y Registro">
                            <field name="reception_journal_id"/>
                            <field name="date"/>
                            
                            <field name="maturity_date" attrs="{'readonly': [('state', '=', 'posted')]}"/>
                            <field name="description" placeholder="Ej: Recepción Préstamo Vehículo"/>
                            <field name="attachment" widget="binary" filename="attachment_filename" required="1"/>
                            <field name="attachment_filename" invisible="1"/>
                            <field name="move_id" attrs="{'invisible': [('move_id', '=', False)]}"/>
                        </group>
                    </group>
                </sheet>
                <div class="o_attachment_preview"/>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_loan_reception_assistant_tree" model="ir.ui.view">
        <field name="name">loan.reception.assistant.tree</field>
        <field name="model">loan.reception.assistant</field>
        <field name="arch" type="xml">
            <tree string="Recepciones de Préstamos">
                <field name="name"/>
                <field name="date"/>
                <field name="loan_id"/>
                <field name="partner_id"/>
                <field name="amount" sum="Monto Recibido"/>
                <field name="currency_id" invisible="1"/>
                <field name="state" widget="badge" decoration-success="state == 'posted'"/>
            </tree>
        </field>
    </record>

    <record id="action_loan_reception_assistant" model="ir.actions.act_window">
        <field name="name">Recepción de Préstamos</field>
        <field name="res_model">loan.reception.assistant</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('company_id', '=', allowed_company_ids[0])]</field>
    </record>

    <menuitem id="menu_loan_reception_assistant" name="Recepción de préstamos" parent="loan_payment_assistant.menu_loan_category" action="action_loan_reception_assistant" sequence="10"/>
</odoo>