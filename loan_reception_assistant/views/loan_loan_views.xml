<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_loan_loan_form_inherit_reception" model="ir.ui.view">
        <field name="name">loan.loan.form.inherit.reception</field>
        <field name="model">loan.loan</field>
        <field name="inherit_id" ref="loan_payment_assistant.view_loan_loan_form"/>
        <field name="arch" type="xml">
            
            <xpath expr="//button[@name='action_register_payment']" position="before">
                <button name="action_register_reception"
                        string="Registrar Recepción"
                        type="object"
                        class="oe_highlight"
                        attrs="{'invisible': [('state', '!=', 'draft')]}"/>
            </xpath>

            <xpath expr="//button[@name='action_view_payments']" position="before">
                <button name="action_view_reception"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-download"
                        attrs="{'invisible': [('reception_count', '=', 0)]}">
                    <field name="reception_count" widget="statinfo" string="Recepción"/>
                </button>
            </xpath>

        </field>
    </record>
</odoo>