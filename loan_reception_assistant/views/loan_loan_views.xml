<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_loan_loan_tree" model="ir.ui.view">
        <field name="name">loan.loan.tree</field>
        <field name="model">loan.loan</field>
        <field name="arch" type="xml">
            <tree string="Préstamos" decoration-muted="state == 'paid'" decoration-info="state == 'draft'">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="date_start"/>
                <field name="maturity_date"/>
                <field name="original_amount"/>
                <field name="outstanding_balance"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="state" widget="badge" decoration-success="state == 'active'" decoration-muted="state == 'paid'"/>
            </tree>
        </field>
    </record>

    <record id="view_loan_loan_form" model="ir.ui.view">
        <field name="name">loan.loan.form</field>
        <field name="model">loan.loan</field>
        <field name="arch" type="xml">
            <form string="Préstamo">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,active,paid"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_payments"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-money">
                            <field name="payment_count" widget="statinfo" string="Pagos"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" attrs="{'readonly': [('state', '!=', 'draft')]}"/></h1>
                    </div>
                    <group>
                        <group string="Información del Préstamo">
                            <field name="partner_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="original_amount" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="outstanding_balance" force_save="1" readonly="1"/> </group>
                        <group string="Condiciones y Fechas">
                            <field name="date_start" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="payment_term_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="maturity_date" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </group>
                        <group string="Contabilidad">
                            <field name="company_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="principal_account_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="interest_account_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    
    <record id="action_loan_loan" model="ir.actions.act_window">
        <field name="name">Préstamos</field>
        <field name="res_model">loan.loan</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_loan_loan"
              name="Préstamos"
              parent="expense_assistant.menu_expense_assistant_config"
              action="action_loan_loan"
              sequence="30"/>
</odoo>