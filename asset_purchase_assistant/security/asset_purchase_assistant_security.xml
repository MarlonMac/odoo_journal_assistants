<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <record id="asset_purchase_assistant_multi_company_rule" model="ir.rule">
            <field name="name">Asistente Activos: Multi-Compañía</field>
            <field name="model_id" ref="model_asset_purchase_assistant"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>

        <record id="asset_purchase_assistant_user_own_rule" model="ir.rule">
            <field name="name">Asistente Activos: Ver Mis Registros</field>
            <field name="model_id" ref="model_asset_purchase_assistant"/>
            <field name="groups" eval="[(4, ref('journal_entry_assistant_base.group_journal_assistant_user'))]"/>
            <field name="domain_force">['|', ('user_id', '=', False), ('user_id', '=', user.id)]</field>
        </record>

        <record id="asset_purchase_assistant_manager_all_rule" model="ir.rule">
            <field name="name">Asistente Activos: Ver Todo (Manager)</field>
            <field name="model_id" ref="model_asset_purchase_assistant"/>
            <field name="groups" eval="[(4, ref('journal_entry_assistant_base.group_journal_assistant_approver'))]"/>
            <field name="domain_force">[(1, '=', 1)]</field>
        </record>

        <record id="asset_category_multi_company_rule" model="ir.rule">
            <field name="name">Regla multi-compañía para Categorías de Activos</field>
            <field name="model_id" ref="model_asset_category"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>

    </data>
</odoo>