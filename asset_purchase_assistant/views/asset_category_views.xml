<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_asset_category_tree" model="ir.ui.view">
        <field name="name">asset.category.tree</field>
        <field name="model">asset.category</field>
        <field name="arch" type="xml">
            <tree string="Categorías de Activos">
                <field name="name"/>
                <field name="asset_account_id"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>

    <record id="view_asset_category_form" model="ir.ui.view">
        <field name="name">asset.category.form</field>
        <field name="model">asset.category</field>
        <field name="arch" type="xml">
            <form string="Categoría de Activo">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="company_id"/>
                        <field name="asset_account_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="action_asset_category" model="ir.actions.act_window">
        <field name="name">Categorías de Activos</field>
        <field name="res_model">asset.category</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_asset_category"
              name="Categorías de Activos"
              parent="expense_assistant.menu_expense_assistant_config"
              action="action_asset_category"
              sequence="20"/>
</odoo>